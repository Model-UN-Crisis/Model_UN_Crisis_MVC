    Layout = "~/Views/Shared/_LayoutSideNav.cshtml";
}

<head>
    <meta charset="utf-8">
    <title>Help Page</title>
</head>

<div class="header">
    <h1>Help Page</h1>
</div>

<div class="hero">
</div>
<div class="content">
    <div class="columns">
