@using System.Text.RegularExpressions;
@model IEnumerable<Model_UN_Crisis.Models.STG_News>

@{
    Layout = "~/Views/Shared/_LayoutSideNav.cshtml";
    var userRole = Context.Session.GetString("userRole");
    var newsList = Model.ToList();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>News Hub</title>
    <meta http-equiv="refresh" content="6">
</head>

<div class="header">
    <h1>News Hub</h1>
</div>

<div class="hero">
</div>
<div class="content">
    <div class="columns">
            @for (int i = newsList.Count - 1; i >= 0; i--)
            {
                var news = newsList[i];
                string pattern = @"\[(.*?)\]";
                string body = "";
                body = news.Ctext;
                MatchCollection matches = Regex.Matches(body, pattern);
                string content = "";
                foreach (Match match in matches)
                {
                    content = match.Groups[1].Value;
                    body = body.Replace(match.Value, "");
                }
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@content</h5>
                        <p class="card-text">@body</p>
                    </div>
                </div>
            }
    </div>
</div>
</div>




